// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model JobListing {
  id               String    @id @default(uuid())
  title            String
  companyName      String
  location         String
  salary           Int
  type             String
  experienceLevel  String
  shortDescription String
  description      String
  applyUrl         String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  expiresAt        DateTime?
  postedAt         DateTime?
  // Mongo user id (string) of the user who posted the listing
  postedBy         String?

  @@index([postedBy])
}
