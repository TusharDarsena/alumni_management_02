generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model JobListing {
  id               String    @id @default(uuid())
  title            String
  companyName      String
  location         String
  salary           Int
  type             String
  experienceLevel  String
  shortDescription String
  description      String
  applyUrl         String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  expiresAt        DateTime?
  postedAt         DateTime?
  // Mongo user id (string) of the user who posted the listing
  postedBy         String?
  // Eligibility fields
  eligibleBranches String?   // JSON array or comma-separated
  eligibleRoles    String?   // JSON array or comma-separated

  applications     JobApplication[]

  @@index([postedBy])
}

model JobApplication {
  id            String      @id @default(uuid())
  jobListingId  String
  jobListing    JobListing  @relation(fields: [jobListingId], references: [id], onDelete: Cascade)
  // Mongo user id (string) of the applicant
  applicantId   String
  linkedinUrl   String?
  githubUrl     String?
  personalNote  String
  appliedAt     DateTime    @default(now())
  status        String      @default("pending") // pending, reviewed, accepted, rejected

  @@index([jobListingId])
  @@index([applicantId])
}
